# Required API Keys
# OpenAI API key for Whisper (speech-to-text) and GPT models
OPENAI_API_KEY=

# Optional - Model Settings
# OpenAI model for the assistant (default: gpt-4)
# Options: gpt-4, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4.1

# Optional - Audio Settings
# Silence threshold for voice detection (default: 500)
# Lower values = more sensitive
VOICE_SILENCE_THRESHOLD=500

# Silence duration in seconds (default: 1.5)
# How long to wait after speech stops
VOICE_SILENCE_DURATION=0.2

# Voice Activity Detection aggressiveness (default: 3)
# Range: 0-3 (0 = least aggressive, 3 = most aggressive)
# Lower values = more sensitive to speech
VAD_AGGRESSIVENESS=2

# Optional - Assistant Configuration
# System prompt for the AI assistant
# Customize the assistant's personality and behavior
ASSISTANT_SYSTEM_PROMPT="You are a helpful voice assistant that helps user to manage their gmail. Be concise in your responses. Do not add unrelevant information. If you are asked to read an email, fetch 3 latest unread emails, read the subject and the short summary of the body of the email, then mark it as read."

# Optional - Development Settings
# Enable debug logging
DEBUG=true

# MCP server log level (debug, info, warn, error)
MCP_LOG_LEVEL=info